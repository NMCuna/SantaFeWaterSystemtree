@model SantaFeWaterSystem.Models.PublicInquiry
@{
    ViewData["Title"] = "Reply to Inquiry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-reply-fill me-2"></i> Reply to Inquiry</h2>
    <a asp-action="Index"
       asp-route-searchTerm="@ViewBag.SearchTerm"
       asp-route-selectedMonth="@ViewBag.SelectedMonth"
       asp-route-selectedYear="@ViewBag.SelectedYear"
       asp-route-page="@ViewBag.CurrentPage"
       class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>

<form asp-action="Reply" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <input type="hidden" name="searchTerm" value="@ViewBag.SearchTerm" />
    <input type="hidden" name="selectedMonth" value="@ViewBag.SelectedMonth" />
    <input type="hidden" name="selectedYear" value="@ViewBag.SelectedYear" />
    <input type="hidden" name="page" value="@ViewBag.CurrentPage" />

    <div class="mb-3">
        <label class="form-label"><i class="bi bi-envelope-fill me-1"></i> Response</label>
        <textarea name="response" class="form-control" rows="6" required></textarea>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-send-fill me-1"></i> Send Email
        </button>
        <a asp-action="Index"
           asp-route-searchTerm="@ViewBag.SearchTerm"
           asp-route-selectedMonth="@ViewBag.SelectedMonth"
           asp-route-selectedYear="@ViewBag.SelectedYear"
           asp-route-page="@ViewBag.CurrentPage"
           class="btn btn-secondary">
            <i class="bi bi-x-circle me-1"></i> Cancel
        </a>
    </div>
</form>
