@model SantaFeWaterSystem.Models.PublicInquiry
@{
    ViewData["Title"] = "Inquiry Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-chat-square-text me-2"></i> Inquiry Details</h2>
    <div>
        <a asp-action="Index"
           asp-route-searchTerm="@ViewBag.SearchTerm"
           asp-route-selectedMonth="@ViewBag.SelectedMonth"
           asp-route-selectedYear="@ViewBag.SelectedYear"
           asp-route-page="@ViewBag.CurrentPage"
           class="btn btn-secondary me-2">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
        @if (Model.Status == "New")
        {
            <a asp-action="Reply"
               asp-route-id="@Model.Id"
               asp-route-searchTerm="@ViewBag.SearchTerm"
               asp-route-selectedMonth="@ViewBag.SelectedMonth"
               asp-route-selectedYear="@ViewBag.SelectedYear"
               asp-route-page="@ViewBag.CurrentPage"
               class="btn btn-primary">
                <i class="bi bi-reply-fill me-1"></i> Reply
            </a>
        }
    </div>
</div>

<dl class="row">
    <dt class="col-sm-3"><i class="bi bi-calendar-event me-1"></i> Submitted</dt>
    <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</dd>

    <dt class="col-sm-3"><i class="bi bi-person-fill me-1"></i> Name</dt>
    <dd class="col-sm-9">@Model.FirstName @Model.LastName</dd>

    <dt class="col-sm-3"><i class="bi bi-envelope-fill me-1"></i> Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3"><i class="bi bi-telephone-fill me-1"></i> Phone</dt>
    <dd class="col-sm-9">@Model.PhoneNumber</dd>

    <dt class="col-sm-3"><i class="bi bi-info-circle-fill me-1"></i> Purpose</dt>
    <dd class="col-sm-9">@Model.Purpose</dd>

    <dt class="col-sm-3"><i class="bi bi-chat-left-text-fill me-1"></i> Description</dt>
    <dd class="col-sm-9" style="white-space:pre-wrap">@Model.Description</dd>

    <dt class="col-sm-3"><i class="bi bi-patch-check-fill me-1"></i> Status</dt>
    <dd class="col-sm-9">@Model.Status</dd>
</dl>
