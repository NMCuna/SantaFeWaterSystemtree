@model SantaFeWaterSystem.Models.PrivacyPolicy

@{
    ViewData["Title"] = "Privacy Policy Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #0d6efd;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-body h4, .card-body h5, .card-body h6 {
            margin-bottom: 0.75rem;
        }

        .btn i {
            margin-right: 5px;
        }

        pre {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 6px;
            font-size: 0.95rem;
            white-space: pre-wrap;
        }

        .modal-header.bg-success {
            background-color: #198754 !important;
        }

        .modal-body h6 {
            margin-top: 1rem;
            margin-bottom: 0.5rem;
        }

        .card.shadow-sm {
            transition: transform 0.2s;
        }

            .card.shadow-sm:hover {
                transform: translateY(-3px);
            }
    </style>
}

<h2><i class="bi bi-shield-lock-fill"></i> Privacy Policy Management</h2>

@if (Model == null)
{
    <div class="alert alert-warning d-flex align-items-center gap-2">
        <i class="bi bi-exclamation-triangle-fill"></i>
        No privacy policy exists yet.
        <a asp-action="Create" class="btn btn-success btn-sm ms-2">
            <i class="bi bi-plus-circle me-1"></i>Create the First One
        </a>
    </div>
}
else
{
    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body">
            <h4 class="fw-bold mb-1">
                @Model.Title <small class="text-muted">(Version @Model.Version)</small>
            </h4>
            <p class="mb-3"><strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>

            <div class="d-flex flex-wrap gap-2">
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#policyModal">
                    <i class="bi bi-eye me-1"></i>View Full Policy
                </button>

                <a asp-action="PrivacyAgreements" class="btn btn-secondary">
                    <i class="bi bi-list-check me-1"></i>User Agreements
                </a>

                <a asp-controller="GeneralSettings" asp-action="Policies" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to Policies
                </a>
            </div>
        </div>
    </div>

    <!-- Policy Details Modal -->
    <div class="modal fade" id="policyModal" tabindex="-1" aria-labelledby="policyModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="policyModalLabel">
                        @Model.Title <small class="text-light">(Version @Model.Version)</small>
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <!-- Policy Overview -->
                    <div class="mb-4">
                        <h6 class="fw-bold text-success"><i class="bi bi-info-circle-fill"></i> Overview</h6>
                        @if (!string.IsNullOrWhiteSpace(Model.Content))
                        {
                            <pre>@Model.Content</pre>
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No main content provided.</p>
                        }
                    </div>

                    <!-- Active Sections -->
                    <div>
                        <h6 class="fw-bold text-success"><i class="bi bi-card-list"></i> Sections</h6>
                        @if (Model.Sections?.Any(s => s.IsActive) == true)
                        {
                            @foreach (var sec in Model.Sections.Where(s => s.IsActive))
                            {
                                <div class="card border-0 shadow-sm mb-3">
                                    <div class="card-body">
                                        <h5 class="fw-bold">@sec.SectionTitle</h5>
                                        <pre>@sec.Content</pre>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted fst-italic">No active sections available.</p>
                        }
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle me-1"></i>Create New Version
                    </a>
                </div>
            </div>
        </div>
    </div>
}
