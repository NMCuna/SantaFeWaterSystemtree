@model IEnumerable<SantaFeWaterSystem.Models.UserPrivacyAgreement>

@{
    ViewData["Title"] = "User Privacy Agreements";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #0d6efd; /* Primary blue */
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }

        .btn i {
            margin-right: 5px;
        }

        .table thead th {
            background-color: #0d6efd;
            color: #fff;
            text-align: center;
        }

        .table tbody td {
            vertical-align: middle;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: #e9f5ff;
        }

        .btn-group {
            margin-bottom: 20px;
        }
    </style>
}

<h2><i class="bi bi-shield-lock-fill"></i> User Privacy Agreements</h2>

<div class="btn-group mb-3">
    <a asp-action="Index" class="btn btn-secondary me-2">
        <i class="bi bi-eye-fill"></i> Open Policies
    </a>
    <a asp-action="Create" asp-controller="PrivacyPolicy" class="btn btn-success">
        <i class="bi bi-plus-circle-fill"></i> Create New Policy
    </a>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>User Account <i class="bi bi-person-badge-fill"></i></th>
            <th>User Name <i class="bi bi-person-fill"></i></th>
            <th>Consumer Name <i class="bi bi-person-lines-fill"></i></th>
            <th>Policy Version <i class="bi bi-file-text-fill"></i></th>
            <th>Agreed At <i class="bi bi-clock-fill"></i></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agreement in Model)
        {
            <tr>
                <td>@agreement.Consumer.User.AccountNumber</td>
                <td>@agreement.Consumer.User.Username</td>
                <td>@agreement.Consumer.FullName</td>
                <td>@agreement.PolicyVersion</td>
                <td>@agreement.AgreedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

@if (ViewBag.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center mt-3">
            <!-- Previous button -->
            <li class="page-item @(ViewBag.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link" asp-action="PrivacyAgreements" asp-route-page="@(ViewBag.CurrentPage - 1)">Previous</a>
            </li>

            @{
                int startPage = Math.Max(ViewBag.CurrentPage - 1, 1);
                int endPage = Math.Min(startPage + 2, ViewBag.TotalPages);

                if (endPage - startPage < 2)
                {
                    startPage = Math.Max(endPage - 2, 1);
                }
            }

            <!-- Page numbers -->
            @for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-action="PrivacyAgreements" asp-route-page="@i">@i</a>
                </li>
            }

            <!-- Next button -->
            <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-action="PrivacyAgreements" asp-route-page="@(ViewBag.CurrentPage + 1)">Next</a>
            </li>
        </ul>
    </nav>
}
