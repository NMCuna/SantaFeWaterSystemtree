@using SantaFeWaterSystem.Models
@inject SantaFeWaterSystem.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Backup Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var lastBackup = _context.BackupLogs
        .OrderByDescending(b => b.ActionDate)
        .FirstOrDefault();

    DateTime? lastBackupPh = lastBackup?.ActionDate;
    DateTime nextBackupPh = lastBackup != null
        ? lastBackup.ActionDate.AddHours(24)
        : DateTime.Now.AddHours(24);

    var totalBackups = _context.BackupLogs.Count();
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary mb-0">
        <i class="bi bi-hdd-rack me-2"></i> Backup Dashboard
    </h3>
    <a asp-controller="GeneralSettings" asp-action="System" class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to System
    </a>
</div>




<!-- Backup Info Card -->
<div class="card mb-4 shadow-sm border-primary">
    <div class="card-body">
        <h5 class="card-title text-secondary mb-3">
            <i class="bi bi-hdd-rack me-2"></i> Backup Information
        </h5>
        <div class="row text-dark">
            <div class="col-md-4 mb-3 d-flex align-items-center">
                <i class="bi bi-stack me-2 text-primary fs-4"></i>
                <div>
                    <div class="text-muted small">Total Backups</div>
                    <strong>@totalBackups</strong>
                </div>
            </div>
            <div class="col-md-4 mb-3 d-flex align-items-center">
                <i class="bi bi-clock-history me-2 text-success fs-4"></i>
                <div>
                    <div class="text-muted small">Last Backup</div>
                    <strong>@lastBackupPh?.ToString("yyyy-MM-dd hh:mm tt")</strong>
                </div>
            </div>
            <div class="col-md-4 mb-3 d-flex align-items-center">
                <i class="bi bi-calendar-check me-2 text-warning fs-4"></i>
                <div>
                    <div class="text-muted small">Next Scheduled</div>
                    <strong>@nextBackupPh.ToString("yyyy-MM-dd hh:mm tt")</strong>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Big Card Buttons -->
<div class="card mb-4 shadow-sm border-secondary p-4">
    <div class="row g-3">
        <!-- Backup Now -->
        <div class="col-md-3">
            <a href="#" class="btn btn-success w-100 py-4 d-flex flex-column align-items-center justify-content-center" data-bs-toggle="modal" data-bs-target="#confirmBackupModal">
                <i class="bi bi-cloud-arrow-up-fill fs-2 mb-2"></i>
                <strong>Backup Now</strong>
                <small class="text-light mt-1 text-center">
                    Create a manual backup of the database immediately to ensure your data is safe.
                </small>
            </a>
        </div>

        <!-- Restore Database -->
        <div class="col-md-3">
            <a asp-action="RestoreDatabase" class="btn btn-danger w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-cloud-arrow-down-fill fs-2 mb-2"></i>
                <strong>Restore Database</strong>
                <small class="text-light mt-1 text-center">
                    Restore your database from the latest backup to recover lost or corrupted data.
                </small>
            </a>
        </div>

        <!-- Manage Backups -->
        <div class="col-md-3">
            <a asp-action="ManageBackups" class="btn btn-primary w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-gear-fill fs-2 mb-2"></i>
                <strong>Manage Backups</strong>
                <small class="text-light mt-1 text-center">
                    Configure automatic backup settings, retention policies, and storage options.
                </small>
            </a>
        </div>

        <!-- Backup History -->
        <div class="col-md-3">
            <a asp-action="BackupHistory" class="btn btn-info w-100 py-4 d-flex flex-column align-items-center justify-content-center">
                <i class="bi bi-clock-fill fs-2 mb-2"></i>
                <strong>Backup History</strong>
                <small class="text-light mt-1 text-center">
                    View detailed logs of past backups including date, time, and status.
                </small>
            </a>
        </div>
    </div>
</div>

<!-- Backup Confirmation Modal -->
<div class="modal fade" id="confirmBackupModal" tabindex="-1" aria-labelledby="confirmBackupModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-success shadow-lg">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="confirmBackupModalLabel">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> Confirm Backup
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body d-flex align-items-center">
                <i class="bi bi-cloud-arrow-up-fill text-success fs-2 me-3"></i>
                <span class="fs-6">
                    Are you sure you want to <strong>backup the database</strong> now?
                </span>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i> Cancel
                </button>
                <form asp-action="BackupDatabase" method="post">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-cloud-arrow-up-fill me-1"></i> Yes, Backup Now
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Alerts -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success d-flex align-items-center mt-2">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger d-flex align-items-center mt-2">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
    </div>
}
