@{
    ViewData["Title"] = "Restore Database";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="backup-title">
        <i class="bi bi-clock-history me-2 text-primary"></i> Restore Database
    </h2>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
    </a>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/restore-database.css" />
    <style>    
        h2.backup-title {
            color: #0d6efd; /* Bootstrap primary color */
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }
    </style>
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h5 class="card-title text-primary mb-3">
            <i class="bi bi-arrow-counterclockwise me-2"></i> Restore Database
        </h5>

        <form asp-action="RestoreDatabase" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="backupFile" class="form-label">
                    <i class="bi bi-file-earmark-medical me-1 text-secondary"></i>
                    Select Backup File (.bak)
                </label>
                <input type="file" name="backupFile" class="form-control" accept=".bak" required />
            </div>

            <button type="submit" class="btn btn-danger d-flex align-items-center">
                <i class="bi bi-arrow-counterclockwise me-2"></i> Restore Database
            </button>
        </form>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success d-flex align-items-center mt-3">
                <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger d-flex align-items-center mt-3">
                <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            </div>
        }
    </div>
</div>
