@using System.IO
@model List<FileInfo>
@{
    ViewData["Title"] = "Backup Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    // Sort files by creation time (latest first)
    var sortedFiles = Model.OrderByDescending(f => f.CreationTime).ToList();
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="backup-title">
        <i class="bi bi-hdd-rack"></i> Backup Management
    </h2>

    <a asp-action="Index" class="btn btn-primary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to Dashboard
    </a>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/backup-management.css" />
}

<div class="row g-4">
    @for (int i = 0; i < sortedFiles.Count; i++)
    {
        var file = sortedFiles[i];
        var sizeInMb = file.Length / 1024.0 / 1024.0;
        <div class="col-md-4 col-sm-6">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-hdd-fill text-primary fs-2 me-2"></i>
                        <h6 class="card-title text-truncate mb-0" title="@file.Name">@file.Name</h6>
                    </div>
                    <p class="mb-1"><strong>Size:</strong> @string.Format("{0:F2}", sizeInMb) MB</p>
                    <p class="mb-3"><strong>Created:</strong> @file.CreationTime.ToString("yyyy-MM-dd HH:mm:ss")</p>

                    <div class="mt-auto d-flex justify-content-between">
                        <a class="btn btn-sm btn-success" asp-action="DownloadBackup" asp-route-fileName="@file.Name">
                            <i class="bi bi-download"></i> Download
                        </a>

                        @* Only show Delete if this is NOT one of the 3 latest *@
                        @if (i >= 3)
                        {
                            <button class="btn btn-sm btn-danger"
                                    onclick="confirmDelete('@file.Name')">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success mt-3">@TempData["Success"]</div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger mt-3">@TempData["Error"]</div>
}

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg rounded-3 border-0">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill"></i> Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <p class="fw-bold text-danger">⚠ Are you sure you want to delete this backup?</p>
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <i class="bi bi-file-earmark-zip-fill text-danger fs-1"></i>
                        <p id="fileToDelete" class="fw-bold mt-2"></p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash-fill"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(fileName) {
            document.getElementById("fileToDelete").innerText = fileName;

            // Set form action dynamically
            const form = document.getElementById("deleteForm");
            form.action = `/Backup/DeleteBackup?fileName=${encodeURIComponent(fileName)}`;

            // Show modal
            var modal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            modal.show();
        }
    </script>
}
