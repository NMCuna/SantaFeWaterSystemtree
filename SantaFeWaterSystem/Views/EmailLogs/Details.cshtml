@model SantaFeWaterSystem.Models.EmailLog

@{
    ViewData["Title"] = "Email Log Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Header with title and back button -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>
        <i class="bi bi-envelope-paper-fill me-2"></i> Email Log Details
    </h2>
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Index"
           asp-route-searchTerm="@ViewBag.SearchTerm"
           asp-route-selectedMonth="@ViewBag.SelectedMonth"
           asp-route-selectedYear="@ViewBag.SelectedYear"
           asp-route-page="@ViewBag.CurrentPage"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
        </a>
    </div>

</div>

<!-- Details Card -->
<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="bi bi-info-circle me-1"></i> Email Log Information</h5>
    </div>
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Consumer</dt>
            <dd class="col-sm-9">@Model.Consumer?.FullName</dd>

            <dt class="col-sm-3">Email</dt>
            <dd class="col-sm-9">@Model.EmailAddress</dd>

            <dt class="col-sm-3">Subject</dt>
            <dd class="col-sm-9">@Model.Subject</dd>

            <dt class="col-sm-3">Message</dt>
            <dd class="col-sm-9">@Html.Raw(Model.Message)</dd>

            <dt class="col-sm-3">Sent At</dt>
            <dd class="col-sm-9">@Model.SentAt.ToString("g")</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @(Model.IsSuccess
                                ? "<span class='text-success'><i class='bi bi-check-circle me-1'></i>Success</span>"
                                : "<span class='text-danger'><i class='bi bi-x-circle me-1'></i>Failed</span>")
            </dd>

            <dt class="col-sm-3">Response</dt>
            <dd class="col-sm-9">@Model.ResponseMessage</dd>
        </dl>
    </div>
</div>
