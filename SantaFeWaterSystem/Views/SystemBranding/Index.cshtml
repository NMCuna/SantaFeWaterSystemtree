@model IEnumerable<SantaFeWaterSystem.Models.SystemBranding>
@{
    ViewData["Title"] = "Manage System Branding";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #0d6efd;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }

        .table {
            border-radius: 8px;
            overflow: hidden;
            background: #fff;
            box-shadow: 0 0 10px rgba(0,0,0,0.05);
        }

            .table th {
                background-color: #f8f9fa;
                font-weight: 600;
            }

        .logo-preview {
            height: 35px;
            max-width: 100px;
            object-fit: contain;
            border-radius: 4px;
            background-color: #fff;
            padding: 2px;
        }

        .btn i {
            margin-right: 5px;
        }

        .action-btns {
            display: flex;
            gap: 5px;
        }
    </style>
}

<h2><i class="bi bi-palette"></i> Manage System Branding</h2>

<a asp-action="Create" class="btn btn-primary mb-3">
    <i class="bi bi-plus-circle"></i> Add Branding
</a>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No branding has been added yet.
    </div>
}
else
{
    <table class="table table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>System Name</th>
                <th>Icon Class</th>
                <th>Logo</th>
                <th style="width:150px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-semibold">@item.SystemName</td>
                    <td><code>@item.IconClass</code></td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.LogoPath))
                        {
                            <img src="@item.LogoPath" alt="Logo" class="logo-preview" />
                        }
                        else
                        {
                            <i class="@item.IconClass fs-3 text-secondary"></i>
                        }
                    </td>
                    <td>
                        <div class="action-btns">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
