@model IEnumerable<SantaFeWaterSystem.Models.Support>
@{
    ViewData["Title"] = "Archived Support Tickets";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #0d6efd;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .badge-status {
            font-size: 0.85rem;
        }

        .table td, .table th {
            vertical-align: middle;
        }

        .btn-action {
            margin-right: 5px;
        }
    </style>
}

<h2><i class="bi bi-archive-fill"></i> Archived Support Tickets</h2>

<a class="btn btn-secondary mb-3" asp-action="Index"><i class="bi bi-arrow-left-circle me-1"></i>Back to Active Tickets</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Subject</th>
            <th>Consumer</th>
            <th>Status</th>
            <th>Created At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Subject</td>
                <td>@ticket.Consumer?.FirstName</td>
                <td>
                    @switch (ticket.Status.ToLower())
                    {
                        case "resolved":
                            <span class="badge bg-success badge-status">@ticket.Status</span>
                            break;
                        case "pending":
                            <span class="badge bg-warning text-dark badge-status">@ticket.Status</span>
                            break;
                        case "archived":
                            <span class="badge bg-secondary badge-status">@ticket.Status</span>
                            break;
                        default:
                            <span class="badge bg-info badge-status">@ticket.Status</span>
                            break;
                    }
                </td>
                <td>@ticket.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <form asp-action="Unarchive" asp-route-id="@ticket.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-info btn-action">
                            <i class="bi bi-box-arrow-up-right"></i> Unarchive
                        </button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@ticket.Id" method="post" class="d-inline" asp-antiforgery="true">
                        <button type="submit" class="btn btn-sm btn-danger btn-action" onclick="return confirm('Are you sure you want to delete this ticket?');">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
