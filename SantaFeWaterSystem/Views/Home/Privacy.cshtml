@model SantaFeWaterSystem.Models.PrivacyPolicy
@{
    ViewData["Title"] = "Privacy Policy";
}

@section Styles {
    <link rel="stylesheet" href="~/css/privacy-policy.css" asp-append-version="true" />
}

<div class="container pt-3">
    <!-- reduced top padding -->
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">

            <!-- Title -->
            <div class="text-center mb-3">
                <!-- reduced bottom margin -->
                <h1 class="privacy-title">@Model.Title</h1>
                <p class="text-muted mb-0">Last Updated: @Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
            </div>

           

            <!-- Policy Content (scrollable) -->
            <div class="privacy-box border rounded shadow-sm privacy-scrollable">
                @if (!string.IsNullOrWhiteSpace(Model.Content))
                {
                    <p class="privacy-intro text-center">@Model.Content</p>
                }



                <!-- Sections -->
                @if (Model.Sections != null && Model.Sections.Any(s => s.IsActive))
                {
                    @foreach (var sec in Model.Sections.Where(s => s.IsActive))
                    {
                        <div class="privacy-section mb-3">
                            <h5 class="privacy-section-title">@sec.SectionTitle</h5>
                            <p class="privacy-section-content">@sec.Content</p>
                        </div>
                    }
                }

            </div>

            <!-- Back to Home Button -->
            <div class="text-center mt-4">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="bi bi-house-door-fill"></i> Back to Home
                </a>
            </div>

        </div>
    </div>
</div>
