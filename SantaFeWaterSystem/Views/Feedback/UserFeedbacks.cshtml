@model IEnumerable<SantaFeWaterSystem.Models.Feedback>

@{
    ViewData["Title"] = "My Feedbacks";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

@section Styles {
    <link rel="stylesheet" href="~/css/feedback.css" asp-append-version="true" />
}

<h2 class="page-title">⭐ @ViewData["Title"]</h2>

<!-- ✅ Archived Feedback Link -->
<div class="mb-4">
    <a asp-action="ArchivedFeedbacks" class="btn btn-outline-primary">
        <i class="bi bi-archive"></i> View Archived Feedback
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> You have not submitted any feedback yet.
    </div>
}
else
{
    <!-- ✅ DESKTOP TABLE VIEW -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-feedback">
            <thead class="table-light">
                <tr>
                    <th>Rating</th>
                    <th>Comment</th>
                    <th>Submitted At</th>
                    <th>Status</th>
                    <th>Reply</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var fb in Model)
                {
                    <tr>
                        <td>
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="@(i <= fb.Rating ? "text-warning" : "text-muted")">
                                    @(i <= fb.Rating ? "★" : "☆")
                                </span>
                            }
                        </td>
                        <td>@fb.Comment</td>
                        <td>@fb.SubmittedAt.ToString("g")</td>
                        <td>
                            @if (fb.Status == "Read")
                            {
                                <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Read</span>
                            }
                            else
                            {
                                <span class="badge bg-danger"><i class="bi bi-envelope-fill"></i> Unread</span>
                            }
                        </td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(fb.Reply))
                            {
                                <button class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#replyModal-@fb.Id">
                                    <i class="bi bi-chat-dots"></i> View
                                </button>
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No reply yet</span>
                            }
                        </td>
                        <td>
                            <form asp-action="ArchiveOwnFeedback" method="post">
                                <input type="hidden" name="id" value="@fb.Id" />
                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-archive"></i> Archive
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- ✅ MOBILE CARD VIEW -->
    <div class="feedback-card">
        @foreach (var fb in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title mb-2">
                        Rating:
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="@(i <= fb.Rating ? "text-warning" : "text-muted")">
                                @(i <= fb.Rating ? "★" : "☆")
                            </span>
                        }
                    </h6>
                    <p><strong>Comment:</strong> @fb.Comment</p>
                    <p><strong>Submitted:</strong> @fb.SubmittedAt.ToString("g")</p>
                    <p>
                        <strong>Status:</strong>
                        @if (fb.Status == "Read")
                        {
                            <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Read</span>
                        }
                        else
                        {
                            <span class="badge bg-danger"><i class="bi bi-envelope-fill"></i> Unread</span>
                        }
                    </p>
                    <p>
                        <strong>Reply:</strong><br />
                        @if (!string.IsNullOrWhiteSpace(fb.Reply))
                        {
                            <button class="btn btn-sm btn-info text-white" data-bs-toggle="modal" data-bs-target="#replyModal-@fb.Id">
                                <i class="bi bi-chat-dots"></i> View Reply
                            </button>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">No reply yet</span>
                        }
                    </p>
                    <form asp-action="ArchiveOwnFeedback" method="post">
                        <input type="hidden" name="id" value="@fb.Id" />
                        <button type="submit" class="btn btn-outline-secondary btn-sm w-100">
                            <i class="bi bi-archive"></i> Archive
                        </button>
                    </form>
                </div>
            </div>
        }
    </div>

    <!-- ✅ REPLY MODALS -->
    @foreach (var fb in Model.Where(f => !string.IsNullOrWhiteSpace(f.Reply)))
    {
        <div class="modal fade" id="replyModal-@fb.Id" tabindex="-1" aria-labelledby="replyModalLabel-@fb.Id" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-info text-white">
                        <h5 class="modal-title" id="replyModalLabel-@fb.Id">Admin Reply</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>@fb.Reply</p>
                        @if (fb.RepliedAt.HasValue)
                        {
                            <small class="text-muted">Replied at: @fb.RepliedAt?.ToString("g")</small>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- ✅ PAGINATION -->
    @if (totalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                @if (currentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-page="@(currentPage - 1)">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= totalPages; i++)
                {
                    <li class="page-item @(i == currentPage ? "active" : "")">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-page="@i">@i</a>
                    </li>
                }

                @if (currentPage < totalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="UserFeedbacks" asp-route-page="@(currentPage + 1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
}
