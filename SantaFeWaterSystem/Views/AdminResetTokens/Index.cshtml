@model IEnumerable<SantaFeWaterSystem.Models.AdminResetToken>

@{
    ViewData["Title"] = "Daily Admin Reset Tokens";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-shield-lock"></i> Daily Admin Reset Tokens</h2>
        <a asp-controller="GeneralSettings" asp-action="Security" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
    </div>

    <table class="table table-bordered mt-3">
        <thead class="table-light">
            <tr>
                <th>Day</th>
                <th>Token</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Day</td>
                    <td><code>@item.Token</code></td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }

    <!-- 🔹 Info Panel (Below Table) -->
    <div class="alert alert-secondary small mt-4">
        <i class="bi bi-info-circle me-1"></i>
        <strong>What are Daily Admin Reset Tokens?</strong><br />
        These tokens provide an extra layer of security for performing daily admin resets.
        Each day has a unique token that must be used to authorize reset actions.

        <hr class="my-2" />

        <strong><i class="bi bi-shield-check me-1"></i> Why it matters:</strong>
        <ul class="mb-2">
            <li>Prevents unauthorized users from performing resets on admin accounts.</li>
            <li>Limits reset actions to a single token per day for added security.</li>
            <li>Ensures accountability by associating resets with specific tokens.</li>
        </ul>

        <strong><i class="bi bi-gear me-1"></i> How it works:</strong>
        <ul class="mb-0">
            <li>Every day, the system generates a new token.</li>
            <li>Admins must use the current day’s token to authorize reset operations.</li>
            <li>If the token is incorrect or expired, the reset is denied.</li>
        </ul>

        <hr class="my-2" />

        <i class="bi bi-lightbulb me-1"></i>
        <em>Tip: Keep tokens secure and only share with trusted admin users. Avoid using old tokens for resets.</em>
    </div>
</div>
