@model SantaFeWaterSystem.Models.HomePageContent
@{
    ViewData["Title"] = "Create Home Page Content";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #0d6efd;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 25px;
        }

        h4 {
            margin-top: 25px;
            margin-bottom: 15px;
            color: #198754;
        }

        .card-section {
            background-color: #f8f9fa;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            box-shadow: 0 0 5px rgba(0,0,0,0.05);
            transition: transform 0.2s;
        }

            .card-section:hover {
                transform: translateY(-2px);
            }

        .btn i {
            margin-right: 5px;
        }

        hr {
            border-top: 1px dashed #ced4da;
        }
    </style>
}

<h2><i class="bi bi-house-fill"></i> Create Home Page Content</h2>

