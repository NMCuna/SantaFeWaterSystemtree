@model SantaFeWaterSystem.Models.HomePageContent
@{
    ViewData["Title"] = "Delete Home Page Content";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #dc3545; /* Danger red */
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .alert-delete {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
        }

        form {
            margin-top: 20px;
        }

        .btn i {
            margin-right: 5px;
        }
    </style>
}

<h2><i class="bi bi-exclamation-triangle-fill"></i> Delete Home Page Content</h2>

<div class="alert alert-warning alert-delete">
    <i class="bi bi-question-circle-fill"></i>
    Are you sure you want to delete the home page content "<strong>@Model.Title</strong>"?
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Yes, Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle-fill"></i> Cancel</a>
</form>
