@{
    Layout = null;
    ViewData["Title"] ??= "Santa Fe Water System";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- External Styles -->
    <link href="~/css/site.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/layout.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/user-login.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/login.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/twofa.css" asp-append-version="true" rel="stylesheet" />
    <link href="~/css/twofaUser.css" asp-append-version="true" rel="stylesheet" />
    @RenderSection("Styles", required: false)

    <!-- ✅ Clean Light Green Theme -->
    <style>
        body {
            background-color: #E9FCD4; /* Single nice light green background */
            color: #2D4739;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container-responsive {
            background-color: #ffffff; /* White card on green bg */
            border-radius: 12px;
            padding: 2rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
        }

        .btn-primary {
            background-color: #A8D5BA;
            border-color: #88C4A2;
            color: #1E3D2F;
        }

            .btn-primary:hover {
                background-color: #88C4A2;
                color: white;
            }

        footer.bg-light {
            background-color: #D6F5D6 !important;
        }

        a {
            color: #316B4E;
        }

            a:hover {
                color: #1F4C38;
            }
    </style>
</head>
<body>
    <!-- ✅ Main Content -->
    <div class="container container-responsive d-flex align-items-center justify-content-center py-4 py-md-5 flex-grow-1">
        <main role="main" class="w-100">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top mt-5 py-3 bg-light">
        <div class="container d-flex justify-content-center flex-wrap">
            <span class="text-nowrap">&copy; @DateTime.Now.Year - Santa Fe Water Billing System -</span>
            <a class="mx-1 text-nowrap" asp-controller="Home" asp-action="Index">Home</a>
            <span class="text-nowrap">|</span>
            <a class="mx-1 text-nowrap" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <span class="text-nowrap">|</span>
            <a class="mx-1 text-nowrap" asp-controller="Home" asp-action="Contact">Contact</a>
        </div>
    </footer>



    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
