@model SantaFeWaterSystem.Models.PasswordPolicy

@if (Model != null)
{
    <ul class="password-requirements text-muted mt-2 small">
        <li>At least <strong>@Model.MinPasswordLength</strong> characters</li>

        @if (Model.RequireComplexity)
        {
            <li>Must include uppercase, lowercase, number, and special character</li>
        }

        @if (Model.PasswordHistoryCount > 0)
        {
            <li>Cannot reuse last <strong>@Model.PasswordHistoryCount</strong> passwords</li>
        }

        @if (Model.MaxPasswordAgeDays > 0)
        {
            <li>Passwords expire after <strong>@Model.MaxPasswordAgeDays</strong> days</li>
        }

        @if (Model.MinPasswordAgeDays > 0)
        {
            <li>Must wait at least <strong>@Model.MinPasswordAgeDays</strong> days before changing again</li>
        }
    </ul>
}
else
{
    <p class="text-muted small">⚠ Password policy not configured.</p>
}
