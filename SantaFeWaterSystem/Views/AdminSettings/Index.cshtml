@model SantaFeWaterSystem.Models.AdminAccessSetting
@{
    ViewData["Title"] = "Admin Token";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"><i class="bi bi-shield-lock"></i> Admin Login Token</h2>
        <a asp-controller="GeneralSettings" asp-action="Security" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back
        </a>
    </div>

    <!-- 🔥 Strong Reminder -->
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        <strong>Keep this token safe!</strong> Losing or forgetting it will lock you out of the Admin Login page.
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <p><strong>Current Token:</strong> <code>@Model.LoginViewToken</code></p>
            <a asp-action="EditToken" class="btn btn-warning">
                <i class="bi bi-pencil"></i> Edit Token
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["Success"]</div>
    }
</div>
