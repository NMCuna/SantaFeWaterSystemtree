@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject SantaFeWaterSystem.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "General Settings";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var user = HttpContextAccessor.HttpContext?.User;
    var userName = ViewBag.FullName ?? user?.Identity?.Name ?? "User";
    var isAdmin = user?.IsInRole("Admin") ?? false;
    var isStaff = user?.IsInRole("Staff") ?? false;
    var userId = user?.FindFirst("UserId")?.Value ?? "0";

    var userPermissions = user?.Claims
        .Where(c => c.Type == "Permission")
        .Select(c => c.Value)
        .ToList() ?? new List<string>();

    var branding = _context.SystemBrandings.FirstOrDefault();
    var logoPath = branding?.LogoPath ?? "/images/logo.png";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="bi bi-gear-fill me-2"></i> General Settings</h2>

    <!-- 🔹 Core Security Settings -->
    <div class="row g-4 mb-4">
        <div class="col-md-4">
            <a asp-controller="AccountPolicy" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                    <div class="card-body">
                        <i class="bi bi-shield-lock fs-1 text-primary"></i>
                        <h5 class="mt-3">Account Policy</h5>
                        <p class="text-muted small">Manage account rules and security policies.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="PasswordPolicy" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                    <div class="card-body">
                        <i class="bi bi-key fs-1 text-success"></i>
                        <h5 class="mt-3">Password Policy</h5>
                        <p class="text-muted small">Set password requirements for users.</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-md-4">
            <a asp-controller="LockoutPolicy" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                    <div class="card-body">
                        <i class="bi bi-lock fs-1 text-danger"></i>
                        <h5 class="mt-3">Lockout Policy</h5>
                        <p class="text-muted small">Configure lockout duration and attempts.</p>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- 🔹 Policies & Compliance -->
    <div class="row g-4 mb-4">
        @if (userPermissions.Contains("ManagePrivacyPolicy"))
        {
            <div class="col-md-4">
                <a asp-controller="PrivacyPolicy" asp-action="PrivacyAgreements" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-shield-lock fs-1 text-secondary"></i>
                            <h5 class="mt-3">Privacy Policy</h5>
                            <p class="text-muted small">View and manage privacy agreements.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        <div class="col-md-4">
            <a asp-controller="EmailSettings" asp-action="Index" class="text-decoration-none">
                <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                    <div class="card-body">
                        <i class="bi bi-envelope fs-1 text-warning"></i>
                        <h5 class="mt-3">Email Settings</h5>
                        <p class="text-muted small">Manage SMTP and notification settings.</p>
                    </div>
                </div>
            </a>
        </div>

        @if (isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="Backup" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-hdd fs-1 text-info"></i>
                            <h5 class="mt-3">Backup Management</h5>
                            <p class="text-muted small">Manage system backups and restore data.</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    <!-- 🔹 System Management -->
    <div class="row g-4 mb-4">
        @if (userPermissions.Contains("ManageQRCodes"))
        {
            <div class="col-md-4">
                <a asp-controller="Settings" asp-action="QrCodes" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-qr-code fs-1 text-primary"></i>
                            <h5 class="mt-3">Manage QR Codes</h5>
                            <p class="text-muted small">Create and manage QR codes.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageRate"))
        {
            <div class="col-md-4">
                <a asp-controller="Rate" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-droplet-half fs-1 text-info"></i>
                            <h5 class="mt-3">Cubic Meter Rate</h5>
                            <p class="text-muted small">Set water rates per cubic meter.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageContact"))
        {
            <div class="col-md-4">
                <a asp-controller="Contacts" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-telephone-fill fs-1 text-success"></i>
                            <h5 class="mt-3">Manage Contact</h5>
                            <p class="text-muted small">Update contact information.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageHome"))
        {
            <div class="col-md-4">
                <a asp-controller="HomePage" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-house-door fs-1 text-warning"></i>
                            <h5 class="mt-3">Manage Home</h5>
                            <p class="text-muted small">Customize home page content.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageSystemName"))
        {
            <div class="col-md-4">
                <a asp-controller="SystemBranding" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-type fs-1 text-danger"></i>
                            <h5 class="mt-3">Manage System Name</h5>
                            <p class="text-muted small">Set system name and branding.</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .setting-card {
        background: #fdfdfd; /* Keep the clean white background */
        border: 1.5px solid rgba(0, 0, 0, 0.2); /* Slightly darker border */
        border-radius: 15px;
        transition: transform 0.25s ease, box-shadow 0.25s ease, border-color 0.25s ease;
    }

        .setting-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.18);
            border-color: rgba(0, 0, 0, 0.35); /* Darker on hover */
            background: #ffffff;
        }
</style>
