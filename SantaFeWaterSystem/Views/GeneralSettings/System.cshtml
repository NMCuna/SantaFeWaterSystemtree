@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject SantaFeWaterSystem.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "System Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var user = HttpContextAccessor.HttpContext?.User;
    var userName = ViewBag.FullName ?? user?.Identity?.Name ?? "User";
    var isAdmin = user?.IsInRole("Admin") ?? false;
    var isStaff = user?.IsInRole("Staff") ?? false;
    var userId = user?.FindFirst("UserId")?.Value ?? "0";

    var userPermissions = user?.Claims
        .Where(c => c.Type == "Permission")
        .Select(c => c.Value)
        .ToList() ?? new List<string>();

    var branding = _context.SystemBrandings.FirstOrDefault();
    var logoPath = branding?.LogoPath ?? "/images/logo.png";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-gear-wide-connected me-2"></i> System Management</h2>
        <a asp-controller="GeneralSettings" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to General Settings
        </a>
    </div>

    <div class="row g-4 mt-4">
        @if (userPermissions.Contains("BackupManagement") || isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="Backup" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-hdd fs-1 text-info"></i>
                            <h5 class="mt-3">Backup Management</h5>
                            <p class="text-muted small">Backup and restore data.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageSystemName") || isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="SystemBranding" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-type fs-1 text-danger"></i>
                            <h5 class="mt-3">System Branding</h5>
                            <p class="text-muted small">Customize system name and branding.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageRate") || isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="Rate" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-droplet-half fs-1 text-info"></i>
                            <h5 class="mt-3">Cubic Meter Rate</h5>
                            <p class="text-muted small">Set water rates.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        <div class="row g-4 mb-4">
            @if (userPermissions.Contains("ManageQRCodes") || isAdmin)
            {
                <div class="col-md-4">
                    <a asp-controller="Settings" asp-action="QrCodes" class="text-decoration-none">
                        <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                            <div class="card-body">
                                <i class="bi bi-qr-code fs-1 text-primary"></i>
                                <h5 class="mt-3">Manage QR Codes</h5>
                                <p class="text-muted small">Create and manage QR codes.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }

            @if (userPermissions.Contains("ManageContact") || isAdmin)
            {
                <div class="col-md-4">
                    <a asp-controller="Contacts" asp-action="Index" class="text-decoration-none">
                        <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                            <div class="card-body">
                                <i class="bi bi-telephone-fill fs-1 text-success"></i>
                                <h5 class="mt-3">Manage Contact</h5>
                                <p class="text-muted small">Update contact information.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }

            @if (userPermissions.Contains("ManageHome") || isAdmin)
            {
                <div class="col-md-4">
                    <a asp-controller="HomePage" asp-action="Index" class="text-decoration-none">
                        <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                            <div class="card-body">
                                <i class="bi bi-house-door fs-1 text-warning"></i>
                                <h5 class="mt-3">Manage Home</h5>
                                <p class="text-muted small">Customize home page content.</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>
