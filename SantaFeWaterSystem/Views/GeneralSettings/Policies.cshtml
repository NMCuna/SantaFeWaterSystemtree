@using System.Security.Claims
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject SantaFeWaterSystem.Data.ApplicationDbContext _context

@{
    ViewData["Title"] = "Policies & Compliance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var user = HttpContextAccessor.HttpContext?.User;
    var userName = ViewBag.FullName ?? user?.Identity?.Name ?? "User";
    var isAdmin = user?.IsInRole("Admin") ?? false;
    var isStaff = user?.IsInRole("Staff") ?? false;
    var userId = user?.FindFirst("UserId")?.Value ?? "0";

    var userPermissions = user?.Claims
        .Where(c => c.Type == "Permission")
        .Select(c => c.Value)
        .ToList() ?? new List<string>();

    var branding = _context.SystemBrandings.FirstOrDefault();
    var logoPath = branding?.LogoPath ?? "/images/logo.png";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-file-earmark-lock me-2"></i> Policies & Compliance</h2>
        <a asp-controller="GeneralSettings" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle me-1"></i> Back to General Settings
        </a>
    </div>

    <div class="row g-4 mt-4">
        @if (userPermissions.Contains("ManagePrivacyPolicy") || isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="PrivacyPolicy" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-shield fs-1 text-secondary"></i>
                            <h5 class="mt-3">Privacy Policy</h5>
                            <p class="text-muted small">Manage privacy agreements and terms.</p>
                        </div>
                    </div>
                </a>
            </div>
        }

        @if (userPermissions.Contains("ManageEmailSettings") || isAdmin)
        {
            <div class="col-md-4">
                <a asp-controller="AdminEmailSettings" asp-action="Index" class="text-decoration-none">
                    <div class="card shadow-sm border-0 h-100 text-center p-3 setting-card">
                        <div class="card-body">
                            <i class="bi bi-envelope fs-1 text-warning"></i>
                            <h5 class="mt-3">Email Settings</h5>
                            <p class="text-muted small">Configure SMTP and email preferences.</p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
