@model X.PagedList.IPagedList<SantaFeWaterSystem.Models.AuditTrailArchive>
@using X.PagedList.Mvc.Core

@{
    ViewData["Title"] = "Archived Activity";
    Layout = "~/Views/Shared/_UserLayout.cshtml";

    string ToPhilippineTime(DateTime utcDateTime)
    {
        var phTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Singapore Standard Time");
        return TimeZoneInfo.ConvertTimeFromUtc(utcDateTime.ToUniversalTime(), phTimeZone).ToString("yyyy-MM-dd hh:mm tt");
    }

    string ToPhilippineTimeFull(DateTime utcDateTime)
    {
        var phTimeZone = TimeZoneInfo.FindSystemTimeZoneById("Singapore Standard Time");
        return TimeZoneInfo.ConvertTimeFromUtc(utcDateTime.ToUniversalTime(), phTimeZone).ToString("f");
    }

    string GetActionIcon(string action)
    {
        if (string.IsNullOrWhiteSpace(action)) return "bi bi-question-circle";
        action = action.ToLower();
        if (action.Contains("login")) return "bi bi-box-arrow-in-right";
        if (action.Contains("logout")) return "bi bi-box-arrow-left";
        if (action.Contains("update")) return "bi bi-pencil-square";
        if (action.Contains("edit")) return "bi bi-pencil";
        if (action.Contains("delete")) return "bi bi-trash";
        if (action.Contains("create") || action.Contains("add")) return "bi bi-plus-circle";
        if (action.Contains("view")) return "bi bi-eye";
        if (action.Contains("archive")) return "bi bi-archive";
        if (action.Contains("reset")) return "bi bi-arrow-clockwise";
        return "bi bi-activity";
    }
}

@section Styles {
    <link rel="stylesheet" href="~/css/user-activity.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
}

<h2 class="page-title text-primary mb-4"><i class="bi bi-archive me-2"></i>Archived Activity</h2>

<!-- 🔍 Filter Form -->
<form method="get" class="row g-3 mb-4 align-items-end">
    <div class="col-md-3">
        <input type="text" name="actionType" value="@ViewBag.ActionType" class="form-control" placeholder="Search by Action">
    </div>
    <div class="col-md-3">
        <input type="text" id="dateRange" name="dateRange" value="@ViewBag.DateRange" class="form-control" placeholder="Select Date Range" />
    </div>
    <div class="col-md-6 d-flex gap-2">
        <button type="submit" class="btn btn-primary"><i class="bi bi-funnel"></i> Filter</button>
        <a href="@Url.Action("Archive", "UserActivity")" class="btn btn-secondary"><i class="bi bi-arrow-counterclockwise"></i> Reset</a>
        <a href="@Url.Action("Index", "UserActivity")" class="btn btn-outline-dark ms-auto"><i class="bi bi-arrow-left-circle"></i> Back</a>
    </div>
</form>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No archived activity found for the selected filter.</div>
}
else
{
    <!-- 💻 Desktop View -->
    <form id="bulkDeleteForm" asp-action="BulkArchiveDelete" method="post">
        <div class="mb-3 d-none d-md-flex justify-content-end">
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
                <i class="bi bi-trash me-1"></i> Delete Selected
            </button>
        </div>


        <div class="table-responsive d-none d-md-block">
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 40px;"><input type="checkbox" id="selectAll" /></th>
                        <th>Date & Time</th>
                        <th>Action</th>
                        <th>Details</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td><input type="checkbox" name="selectedIds" value="@log.Id" class="selectItem" /></td>
                            <td>@ToPhilippineTime(log.Timestamp)</td>
                            <td><i class="@GetActionIcon(log.Action) me-1"></i> @log.Action</td>
                            <td>
                                @if (!string.IsNullOrEmpty(log.Details) && log.Details.Length > 60)
                                {
                                    <span>@log.Details.Substring(0, 60)...</span>
                                    <button class="btn btn-sm btn-link text-primary" data-bs-toggle="modal" data-bs-target="#modal-@log.Id">View</button>
                                }
                                else
                                {
                                    @log.Details
                                }

                                <!-- Desktop Modal -->
                                <div class="modal fade" id="modal-@log.Id" tabindex="-1" aria-labelledby="modalLabel-@log.Id" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-scrollable modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header bg-primary text-white">
                                                <h5 class="modal-title" id="modalLabel-@log.Id"><i class="bi bi-info-circle me-2"></i>Activity Detail</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p><strong>Action:</strong> @log.Action</p>
                                                <p><strong>Date/Time:</strong> @ToPhilippineTimeFull(log.Timestamp)</p>
                                                <hr />
                                                <p>@log.Details</p>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"><i class="bi bi-x-circle me-1"></i> Close</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </form>

    <!-- 🛑 Confirmation Modal for Bulk Delete -->
    <div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="confirmDeleteLabel"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete</h5>
                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete the selected logs? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </button>
                    <button type="button" class="btn btn-danger" onclick="document.getElementById('bulkDeleteForm').submit();">
                        <i class="bi bi-trash me-1"></i> Confirm Delete
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- 📱 Mobile Card View -->
    <div class="d-block d-md-none">
        @foreach (var log in Model)
        {
            <div class="card mb-3 shadow-sm">
                <div class="card-body">
                    <h6 class="card-title text-primary"><i class="@GetActionIcon(log.Action) me-2"></i>@log.Action</h6>
                    <p class="card-text text-muted mb-1">
                        <i class="bi bi-calendar-event me-1"></i>@ToPhilippineTime(log.Timestamp)
                    </p>
                    <p class="card-text">
                        @if (!string.IsNullOrEmpty(log.Details) && log.Details.Length > 100)
                        {
                            <span>@log.Details.Substring(0, 100)...</span>
                            <button class="btn btn-sm btn-link text-primary" data-bs-toggle="modal" data-bs-target="#modal-@log.Id-sm">View more</button>
                        }
                        else
                        {
                            @log.Details
                        }
                    </p>

                    <!-- 🔴 Mobile Delete Button -->
                    <form asp-action="DeleteArchive" method="post" onsubmit="return confirm('Are you sure you want to delete this log?');">
                        <input type="hidden" name="id" value="@log.Id" />
                        <button type="submit" class="btn btn-sm btn-outline-danger w-100">
                            <i class="bi bi-trash me-1"></i> Delete
                        </button>
                    </form>
                </div>
            </div>

            <!-- 📱 Modal -->
            <div class="modal fade" id="modal-@log.Id-sm" tabindex="-1" aria-labelledby="modalLabel-@log.Id-sm" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable modal-lg">
                    <div class="modal-content">
                        <div class="modal-header bg-primary text-white">
                            <h5 class="modal-title" id="modalLabel-@log.Id-sm"><i class="bi bi-info-circle me-2"></i>Activity Detail</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <p><strong>Action:</strong> @log.Action</p>
                            <p><strong>Date/Time:</strong> @ToPhilippineTimeFull(log.Timestamp)</p>
                            <hr />
                            <p>@log.Details</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                <i class="bi bi-x-circle me-1"></i> Close
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (Model.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-3">
        @Html.PagedListPager(Model,
        page => Url.Action("Archive", new
        {
            page,
            actionType = ViewBag.ActionType,
            dateRange = ViewBag.DateRange
        }),
        new PagedListRenderOptions
        {
            DisplayLinkToFirstPage = PagedListDisplayMode.Always,
            DisplayLinkToLastPage = PagedListDisplayMode.Always,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = 2,
            UlElementClasses = new[] { "pagination" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
</div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        flatpickr("#dateRange", {
            mode: "range",
            dateFormat: "Y-m-d",
            defaultDate: "@ViewBag.DateRange"
        });

        document.getElementById('selectAll')?.addEventListener('change', function () {
            document.querySelectorAll('.selectItem').forEach(cb => cb.checked = this.checked);
        });
    </script>
}
