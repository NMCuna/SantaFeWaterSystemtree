@{
    ViewData["Title"] = "Consumer Settings";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    bool is2FAEnabled = (ViewBag.Is2FAEnabled as bool?) ?? false;
}

<div class="container mt-4">
    <!-- Header -->
    <h2 class="mb-3"><i class="bi bi-gear"></i> General Settings</h2>

    <div class="twofa-container d-flex flex-column justify-content-between bg-white p-4 shadow rounded" style="min-height: 300px;">
        <div class="list-group shadow-sm rounded-3 mb-3">
            <!-- My Activity -->
            <a class="list-group-item list-group-item-action d-flex align-items-center mb-2"
               href="@Url.Action("Index", "UserActivity")">
                <i class="bi bi-clock-history me-2"></i> My Activity
            </a>

            <!-- Change Password -->
            <a class="list-group-item list-group-item-action d-flex align-items-center text-danger mb-2"
               href="@Url.Action("ResetPassword", "User")">
                <i class="bi bi-key-fill me-2"></i> Change Password
            </a>

            <!-- Two-Factor Authentication -->
            @if (!is2FAEnabled)
            {
                <a class="list-group-item list-group-item-action d-flex align-items-center text-primary mb-2"
                   href="/Account/Setup2FAUser">
                    <i class="bi bi-shield-lock me-2"></i> Setup 2FA
                </a>
            }
            else
            {
                <form method="post"
                      asp-controller="Account"
                      asp-action="Reset2FAUser"
                      class="list-group-item m-0 p-0 border-0 mb-2"
                      onsubmit="return confirm('Are you sure you want to disable Two-Factor Authentication?');">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn w-100 text-start d-flex align-items-center text-warning">
                        <i class="bi bi-shield-x me-2"></i> Disable 2FA
                    </button>
                </form>
            }
        </div>

        <!-- Back Button inside container, aligned bottom-right -->
        <div class="d-flex justify-content-end mt-3">
            <a asp-controller="User" asp-action="Dashboard" class="btn btn-outline-secondary d-flex align-items-center">
                <i class="bi bi-arrow-left-circle-fill me-1"></i> Back
            </a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Mobile-friendly adjustments */
        @@media (max-width: 576px) {
            .list-group-item

        {
            font-size: 1rem;
            padding: 1rem 1rem;
        }

        .twofa-container {
            padding: 1.5rem 1rem;
        }

        .btn {
            font-size: 0.95rem;
        }

        }

        /* List item hover and active feedback */
        .list-group-item {
            transition: background-color 0.2s ease, color 0.2s ease;
        }

            .list-group-item:hover,
            .list-group-item.active-touch {
                background-color: #e9ecef; /* Light gray when hovered or touched */
                cursor: pointer;
            }

            .list-group-item:active {
                background-color: #ced4da; /* Slightly darker when pressed */
            }

        /* Optional: button feedback */
        .btn:active {
            background-color: #d6d6d6 !important;
            transform: scale(0.98);
        }
    </style>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const items = document.querySelectorAll('.list-group-item');

            items.forEach(item => {
                // Add active class on touchstart
                item.addEventListener('touchstart', () => {
                    item.classList.add('active-touch');
                });

                // Remove active class on touchend / touchcancel
                item.addEventListener('touchend', () => {
                    item.classList.remove('active-touch');
                });

                item.addEventListener('touchcancel', () => {
                    item.classList.remove('active-touch');
                });
            });
        });
    </script>
}
