@model SantaFeWaterSystem.ViewModels.PaymentReceiptViewModel

@{
    ViewData["Title"] = "Payment Receipt";
    Layout = "_AccountLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/receipt.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        .receipt-container {
            background: #cceeff;
            border-radius: 10px;
            padding: 2rem;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            max-width: 900px;
            margin: auto;
            font-size: clamp(0.9rem, 2vw, 1.1rem);
        }

        .receipt-header h2 {
            font-size: clamp(1.2rem, 4vw, 2rem); 
        }

        .receipt-section h5 {
            margin-top: 1.5rem;
            margin-bottom: 0.8rem;
            font-size: clamp(1.1rem, 3vw, 1.3rem);
        }

        .receipt-line-item {
            font-size: clamp(0.9rem, 2.5vw, 1rem);
            word-wrap: break-word;
        }

        .receipt-footer {
            text-align: center;
            margin-top: 30px;
            padding-top: 15px;
            border-top: 1px solid #ccc;
            color: #777;
            font-size: clamp(0.8rem, 1.8vw, 0.95rem);
        }

        .glow {
            text-shadow: 0 0 3px #b3d4fc;
        }

        .small-text {
            font-size: clamp(0.75rem, 2vw, 0.9rem);
            line-height: 1.2;
            word-break: break-word;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 1rem;
            margin-top: 2rem;
        }

            .action-buttons .btn {
                font-size: clamp(0.9rem, 2vw, 1rem);
                padding: 0.5rem 1rem;
            }
            body {
    background-color: #c6f6d5; /* light sky green */
}


    
    </style>
}

<div id="receipt" class="receipt-container">
    <div class="receipt-header text-center">
        <h2 class="glow"><i class="bi bi-receipt-cutoff me-2"></i> Payment Receipt</h2>
        <p class="text-muted">Santa Fe Water Billing System</p>
    </div>

    <div class="receipt-section">
        <h5><i class="bi bi-person-fill me-2"></i>Consumer Info</h5>
        <div class="row mb-2">
            <div class="col-12 col-md-6 receipt-line-item"><strong>Account Number:</strong> @Model.AccountNumber</div>
            <div class="col-12 col-md-6 receipt-line-item"><strong>Full Name:</strong> @Model.FullName</div>
        </div>
    </div>

    <div class="receipt-section">
        <h5><i class="bi bi-receipt me-2"></i>Payment Details</h5>
        <div class="row mb-2">
            <div class="col-12 col-md-6 receipt-line-item"><strong>Bill No:</strong> @Model.BillNo</div>
            <div class="col-12 col-md-6 receipt-line-item">
                <strong>Status:</strong>
                @if (Model.Status == "Verified")
                {
                    <span class="badge bg-success">Paid</span>
                }
                else
                {
                    <span class="badge bg-warning text-dark">Pending</span>
                }
            </div>
            <div class="col-12 col-md-6 receipt-line-item"><strong>Payment Date:</strong> @Model.PaymentDate.ToString("MMM dd, yyyy")</div>
            <div class="col-12 col-md-6 receipt-line-item"><strong>Amount Paid:</strong> ₱@Model.AmountPaid.ToString("N2")</div>
            <div class="col-12 col-md-6 receipt-line-item"><strong>Method:</strong> @Model.Method</div>
            <div class="col-12 col-md-6 receipt-line-item small-text"><strong>Transaction ID:</strong> @Model.TransactionId</div>
        </div>
    </div>

    <div class="receipt-footer">
        <p>Thank you for your payment!</p>
    </div>
</div>

<div class="action-buttons no-print">
    <button class="btn btn-primary" onclick="downloadReceiptImage()">
        <i class="bi bi-download me-1"></i> Download Receipt
    </button>
    <a asp-action="Payment" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i> Back
    </a>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
        function downloadReceiptImage() {
            const actions = document.querySelector('.action-buttons');
            actions.classList.add('hide-during-download');

            html2canvas(document.querySelector("#receipt")).then(canvas => {
                const link = document.createElement('a');
                link.download = 'receipt.png';
                link.href = canvas.toDataURL("image/png");
                link.click();

                actions.classList.remove('hide-during-download');
            });
        }
    </script>
}
