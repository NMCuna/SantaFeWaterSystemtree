@model SantaFeWaterSystem.Models.ViewModels.SmsLogViewModel

@{
    ViewData["Title"] = "SMS Log Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var searchTerm = ViewBag.SearchTerm as string;
    var selectedMonth = ViewBag.SelectedMonth as int?;
    var selectedYear = ViewBag.SelectedYear as int?;
    var currentPage = ViewBag.CurrentPage ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2><i class="bi bi-chat-dots me-2"></i> SMS Log Details</h2>
    <a asp-action="SmsLogs"
       asp-route-searchTerm="@searchTerm"
       asp-route-selectedMonth="@selectedMonth"
       asp-route-selectedYear="@selectedYear"
       asp-route-page="@currentPage"
       class="btn btn-secondary">
        <i class="bi bi-arrow-left-circle me-1"></i> Back to List
    </a>
</div>

<dl class="row">
    <dt class="col-sm-3">Recipient</dt>
    <dd class="col-sm-9">@Model.ConsumerName</dd>

    <dt class="col-sm-3">Contact Number</dt>
    <dd class="col-sm-9">@Model.ContactNumber</dd>

    <dt class="col-sm-3">Message</dt>
    <dd class="col-sm-9" style="white-space: pre-wrap;">@Model.Message</dd>

    <dt class="col-sm-3">Sent At</dt>
    <dd class="col-sm-9">@Model.SentAt.ToString("g")</dd>

    <dt class="col-sm-3">Status</dt>
    <dd class="col-sm-9">
        @if (Model.IsSuccess)
        {
            <span class="badge bg-success">Success</span>
        }
        else
        {
            <span class="badge bg-danger">Failed</span>
        }
    </dd>

    <dt class="col-sm-3">Response</dt>
    <dd class="col-sm-9">@Model.ResponseMessage</dd>
</dl>
