@{
    ViewData["Title"] = "Reset Admin Password";
    Layout = "_AccountLayout";
}

@section Styles {
    <style>
        .reset-container {
            max-width: 500px;
            margin: 80px auto 0;
        }

        .reset-card {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

            .reset-card h2 {
                font-weight: bold;
                color: #dc3545;
                margin-bottom: 25px;
                text-align: center;
            }

        .form-label {
            font-weight: 600;
        }

        .alert {
            font-size: 0.95rem;
        }
    </style>
}

<div class="reset-container">
    <div class="reset-card">
        <h2><i class="bi bi-shield-lock-fill"></i> Admin Password Reset</h2>

        @if (ViewBag.CurrentTime != null)
        {
            <p class="text-center text-muted small">🕒 Server Time: <strong>@ViewBag.CurrentTime</strong></p>
        }

        @if (ViewBag.TimeWarning != null)
        {
            <div class="alert alert-warning text-center fw-bold mt-2">
                @Html.Raw(ViewBag.TimeWarning)
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center fw-bold mt-2">@TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center fw-bold mt-2">@TempData["Success"]</div>
            <div class="text-center mt-3">
                <a asp-action="AdminLogin" class="btn btn-success"><i class="bi bi-box-arrow-in-right"></i> Go to Login</a>
            </div>
        }

        @if (ViewBag.TimeWarning == null && TempData["Success"] == null)
        {
            <form method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="token" value="@ViewBag.Token" />

                <div class="mb-3">
                    <label class="form-label">New Password</label>
                    <input type="password" name="NewPassword" id="NewPassword" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label class="form-label">Confirm Password</label>
                    <input type="password" name="ConfirmPassword" id="ConfirmPassword" class="form-control" required />
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" value="" id="showPassword" onclick="togglePasswords()">
                    <label class="form-check-label" for="showPassword">
                        Show Passwords
                    </label>
                </div>

                <button type="submit" class="btn btn-danger w-100"><i class="bi bi-arrow-repeat"></i> Reset Password</button>
            </form>
        }

        @if (ViewBag.TimeWarning != null)
        {
            <div class="alert alert-secondary text-center mt-3">
                ⚠️ The page is outside the recommended reset hours. Proceed only if necessary.
            </div>
        }

        <div class="alert alert-info text-center mt-3">
            💡 Reminder: Store this token safely. Take a secure screenshot or note it down.
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function togglePasswords() {
            const newPass = document.getElementById("NewPassword");
            const confirmPass = document.getElementById("ConfirmPassword");
            const type = newPass.type === "password" ? "text" : "password";
            newPass.type = type;
            confirmPass.type = type;
        }
    </script>
}
