@model SantaFeWaterSystem.ViewModels.AdminResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Admin Password";
    Layout = "_AccountLayout";
}

@section Styles {
    <style>
        .reset-container {
            max-width: 500px;
            margin: 80px auto 0;
        }

        .reset-card {
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.1);
        }

            .reset-card h2 {
                font-weight: bold;
                color: #dc3545;
                margin-bottom: 25px;
                text-align: center;
            }

        .form-label {
            font-weight: 600;
        }

        .alert {
            font-size: 0.95rem;
        }
    </style>
}

<div class="reset-container">
    <div class="reset-card">
        <h2><i class="bi bi-shield-lock-fill"></i> Admin Password Reset</h2>

        @if (!string.IsNullOrEmpty(Model.CurrentTime))
        {
            <p class="text-center text-muted small">🕒 Server Time: <strong>@Model.CurrentTime</strong></p>
        }

        @if (!string.IsNullOrEmpty(Model.TimeWarning))
        {
            <div class="alert alert-warning text-center fw-bold mt-2">
                @Model.TimeWarning
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center fw-bold mt-2">@TempData["Error"]</div>
        }

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center fw-bold mt-2">@TempData["Success"]</div>
            <div class="text-center mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-success"><i class="bi bi-box-arrow-in-right"></i> Go to Home</a>
            </div>
        }

        @* Display password policy via partial view *@
        @if (Model.PasswordPolicy != null)
        {
            <div class="mb-3">
                @await Html.PartialAsync("_PasswordRequirements", Model.PasswordPolicy)
            </div>
        }

        @if (string.IsNullOrEmpty(Model.TimeWarning) && TempData["Success"] == null)
        {
            <form asp-action="MySecretEmergenceResetPasswordforAdmin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Token" />

                <div class="mb-3">
                    <label class="form-label" asp-for="AdminId">Select Admin</label>
                    <select asp-for="AdminId" class="form-control" asp-items="@(new SelectList(Model.AdminList, "Id", "Username"))" required>
                        <option value="">-- Select Admin --</option>
                    </select>
                    <span class="text-danger" asp-validation-for="AdminId"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="NewPassword">New Password</label>
                    <input asp-for="NewPassword" id="NewPassword" class="form-control" type="password" required />
                    <span class="text-danger" asp-validation-for="NewPassword"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
                    <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control" type="password" required />
                    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="showPassword" onclick="togglePasswords()">
                    <label class="form-check-label" for="showPassword">
                        Show Passwords
                    </label>
                </div>

                <button type="submit" class="btn btn-danger w-100"><i class="bi bi-arrow-repeat"></i> Reset Password</button>
            </form>
        }

        @if (!string.IsNullOrEmpty(Model.TimeWarning))
        {
            <div class="alert alert-secondary text-center mt-3">
                ⚠️ The page is outside the recommended reset hours. Proceed only if necessary.
            </div>
        }

        <div class="alert alert-info text-center mt-3">
            💡 Reminder: Store this token safely. Take a secure screenshot or note it down.
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function togglePasswords() {
            const newPass = document.getElementById("NewPassword");
            const confirmPass = document.getElementById("ConfirmPassword");
            const type = newPass.type === "password" ? "text" : "password";
            newPass.type = type;
            confirmPass.type = type;
        }
    </script>
}
