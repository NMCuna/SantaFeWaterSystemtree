@model ResetPasswordUserViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "_AccountLayout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <!-- Header -->
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-key me-2"></i>Reset Password</h5>
                </div>

                <!-- Body -->
                <div class="card-body p-4">
                    <form asp-action="ResetPasswordUser" method="post" autocomplete="off">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="Token" />

                        <!-- New Password -->
                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="NewPassword" class="form-control" type="password" id="NewPassword" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>

                            <!-- ✅ Dynamically load password requirements -->
                            @await Html.PartialAsync("_PasswordRequirements", (SantaFeWaterSystem.Models.PasswordPolicy)ViewBag.PasswordPolicy)
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" id="ConfirmPassword" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <!-- Show Passwords Toggle -->
                        <div class="form-check mb-3">
                            <input class="form-check-input" type="checkbox" id="showPassword" />
                            <label class="form-check-label" for="showPassword">Show Passwords</label>
                        </div>

                        <!-- Submit -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-redo-alt me-1"></i>Reset Password
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('showPassword').addEventListener('change', function () {
            const newPass = document.getElementById('NewPassword');
            const confirmPass = document.getElementById('ConfirmPassword');
            const type = this.checked ? 'text' : 'password';
            newPass.type = type;
            confirmPass.type = type;
        });
    </script>
}
