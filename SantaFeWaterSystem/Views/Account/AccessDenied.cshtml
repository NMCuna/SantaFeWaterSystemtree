@{
    ViewData["Title"] = "Access Denied";
    Layout = "_AccountLayout"; // Or your preferred layout
}

@section Styles {
    <style>
        .access-denied-container {
            max-width: 600px;
            margin: 5rem auto;
            padding: 2.5rem;
            border-radius: 1rem;
            background-color: #fff;
            box-shadow: 0 0 25px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .access-icon {
            font-size: 4rem;
            color: #dc3545;
            animation: pulse 1.2s infinite;
        }


        @@keyframes pulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.1);
        }

        }

        .btn-home {
            margin-top: 2rem;
        }
    </style>
}

<div class="access-denied-container">
    <i class="bi bi-shield-exclamation access-icon"></i>
    <h2 class="mt-3 text-danger fw-bold">Access Denied</h2>
    <p class="text-muted mb-3">You are not authorized to view this page.</p>
    <a href="~/" class="btn btn-outline-danger btn-home">
        <i class="bi bi-house-door-fill me-1"></i> Back to Home
    </a>
</div>
