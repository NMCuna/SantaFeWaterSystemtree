@model SantaFeWaterSystem.ViewModels.RegisterAdminViewModel

@{
    ViewData["Title"] = "Register Admin/Staff";
    Layout = "_AccountLayout";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Register Admin/Staff</h5>
        </div>
        <div class="card-body">
            <form asp-action="RegisterAdmin" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <!-- Full Name -->
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label"></label>
                    <input asp-for="FullName" class="form-control" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" class="form-control" id="AdminPasswordField" />
                    <div class="form-check mt-2">
                        <input class="form-check-input" type="checkbox" id="showAdminPassword">
                        <label class="form-check-label" for="showAdminPassword">
                            Show Password
                        </label>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>

                 
                    <!-- ✅ Dynamically load password requirements -->
                    @await Html.PartialAsync("_PasswordRequirements", (SantaFeWaterSystem.Models.PasswordPolicy)ViewBag.PasswordPolicy)
                </div>

                <!-- Role -->
                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Staff">Staff</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <button type="submit" class="btn btn-primary">Register</button>
                <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Cancel
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('showAdminPassword').addEventListener('change', function () {
            const passwordField = document.getElementById('AdminPasswordField');
            passwordField.type = this.checked ? 'text' : 'password';
        });
    </script>
}
