@model SantaFeWaterSystem.Models.ContactInfo
@{
    ViewData["Title"] = "Delete Contact";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        h2 {
            color: #dc3545; /* Danger red for delete */
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
            margin-bottom: 20px;
        }

        .alert-warning {
            display: flex;
            align-items: center;
            gap: 10px;
            font-weight: 500;
        }

        dl.row dt {
            font-weight: 600;
            text-align: right;
        }

        dl.row dd {
            margin-left: 0;
        }

        form {
            margin-top: 20px;
        }

        .btn-danger i, .btn-secondary i {
            margin-right: 5px;
        }
    </style>
}

<h2><i class="bi bi-exclamation-triangle-fill"></i> Delete Contact</h2>

<div class="alert alert-warning">
    <i class="bi bi-question-circle-fill"></i>
    Are you sure you want to delete this contact information?
</div>

<dl class="row mt-3">
    <dt class="col-sm-3"><i class="bi bi-telephone-fill"></i> Phone</dt>
    <dd class="col-sm-9">@Model.Phone</dd>

    <dt class="col-sm-3"><i class="bi bi-envelope-fill"></i> Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3"><i class="bi bi-facebook"></i> Facebook</dt>
    <dd class="col-sm-9">@Model.FacebookName</dd>
</dl>

<form asp-action="DeleteConfirmed" method="post" class="mt-4" onsubmit="return confirmDelete();">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="bi bi-trash-fill"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-x-circle-fill"></i> Cancel</a>
</form>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to permanently delete this contact?');
        }
    </script>
}
